<table>
  <tr>
    <th><%= f.label(:first_name) %></th>
    <td><%= f.text_field(:first_name) %></td><br>
  </tr>
  <tr>
    <th><%= f.label(:last_name) %></th>
    <td><%= f.text_field(:last_name) %></td><br>
  </tr>
  <tr>
    <th><%= f.label(:username) %></th>
    <td><%= f.text_field(:username) %></td><br>
  </tr>
  <tr>
    <th><%= f.label(:password) %></th>
    <td><%= f.password_field(:password) %></td>
  </tr>
  <tr>
    <th><%= f.label(:confirm) %></th>
    <td><%= f.password_field(:password_confirmation) %></td>
  </tr>
  <tr>
    <th><%= f.label(:classroom_ids) %></th>
    <td><%= f.select(:classroom_ids, @classrooms.map {|s| [s.period, s.id] }) %></td><br>
  </tr>
  <tr>
    <th><%= f.label(:admin) %></th>
    <td><%= f.check_box(:admin) %></td>
  </tr>


</table>
