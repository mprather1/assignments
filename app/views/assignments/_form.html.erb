<%= form_for @assignment do |f| %>
<table>
  <tr>
    <th><%= f.label(:title) %></th>
    <td><%= f.text_field(:title) %></td><br>
  </tr>
  <tr>
    <th><%= f.label(:content) %></th>
    <td><%= f.text_area(:content) %></td><br>
  </tr>
  <tr>
    <th><%= f.label(:due_date) %></th>
    <td><%= f.text_field(:due_date, id: "datepicker") %></td><br>
  </tr>
  <tr>
    <th><%= f.label(:attachment) %></th>
    <td><%= f.file_field(:attachment) %></td><br>
  </tr>
