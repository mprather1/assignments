    <th>Choose classes to assign: </th>
  </tr>
  <%= f.collection_check_boxes :classroom_ids, Classroom.all, :id, :period do |f| %>

  <tr>
    <td><%= f.check_box %>
       <%= f.label %></td>
    <% end %>
  </tr>
  <tr>
    <td>
      <%= f.submit("Create Assignment", class: 'btn btn-inverse') %>
    </td>
  </tr>



